<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolicitudesCompraAPP.Views.Menu"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout>


            <Button x:Name="BtnSolicitudes" Image="solicitudes.png" Text="Solicitudes" Style="{StaticResource MenuItem}" />
            <Button x:Name="BtnProductos" Image="producto.png" Text="Productos" Style="{StaticResource MenuItem}"/>
            <Button x:Name="BtnClientes" Image="clientes.png" Text="Clientes" Style="{StaticResource MenuItem}"/>
            <Button x:Name="BtnUsuarios" Image="usuarios.png" Text="Usuarios" Style="{StaticResource MenuItem}"/>
            <Button x:Name="BtnSucursales" Image="sucursal.png" Text="Sucursales" Style="{StaticResource MenuItem}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>